# === STEP 7: OUTPUT ===

# Updated to save to D:/aa030/output/ directory
primary_output_filename = 'D:/aa030/output/primary_output.csv'
secondary_output_filename = 'D:/aa030/output/secondary_output.csv'

primary_df = pd.DataFrame(primary_output, columns=["Primary Author", "Paper Title", "Primary Author Affiliation"])
secondary_df = pd.DataFrame(secondary_output, columns=["Secondary Author", "Primary Author", "Paper Title", "Secondary Author Affiliation"])

primary_df.to_csv(primary_output_filename, index=False)
secondary_df.to_csv(secondary_output_filename, index=False)

print(f"Saved {len(primary_df)} primary author entries to {primary_output_filename}")
print(f"Saved {len(secondary_df)} secondary author entries to {secondary_output_filename}")
