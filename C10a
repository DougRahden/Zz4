# === Cell 10a: Inspect cached author profile data from Cell 10 ===

# Show how many profiles were retrieved
print(f"[INFO] Profiles retrieved: {len(profile_lookup)}\n")

# Preview first few entries
for i, (scopus_id, data) in enumerate(profile_lookup.items()):
    print(f"SCOPUS ID: {scopus_id}")
    print(f"  Latest Affiliation: {data.get('latest_affiliation', '')}")
    print(f"  City: {data.get('latest_affiliation_city', '')}")
    print(f"  Country: {data.get('latest_affiliation_country', '')}")
    print("---")
    if i >= 9:
        break
